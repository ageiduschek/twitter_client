<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/ActionBarTheme</item>
        <item name="actionBarStyle">@style/ActionBarTheme</item>

        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/twitter_dark_blue</item>
        <!--   app branding color for the app bar -->
        <item name="colorPrimary">@color/twitter_logo_blue</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/twitter_verified_blue</item>


    </style>


    <!-- ActionBar styles -->
    <style name="ActionBarTheme"
           parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/twitter_logo_blue</item>
        <item name="background">@color/twitter_logo_blue</item>
        <item name="android:titleTextStyle">@style/ActionBarTextStyle</item>
        <item name="titleTextStyle">@style/ActionBarTextStyle</item>
    </style>

    <style name="ActionBarTextStyle"
           parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>




</resources>
